- use ACIDECore\App\View
- $scripts = View::getScripts(['app' , 'ace'])
- $styles = View::getStyles(['app' , 'fontawesome' , 'metro4'])

doctype html
html(lang="fa")
    head
        meta(charset="UTF-8")
        meta(name="description" content="Free Web tutorials")
        meta(name="keywords" content="HTML,CSS,XML,JavaScript")
        meta(name="author" content="My name")
        meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
        title ACIDE
        each $style in $styles
            != $style
    body(ng-app="ideApp" ng-controller="ideCtrl")
        main
            .container-fluid.p-0
                div.thin-menu.fg-white.top-menu(data-role="appbar" data-expand-point="md")
                    .app-bar-menu
                        li
                            a.dropdown-toggle(href="#!") File
                            ul.d-menu.fg-white(data-role="dropdown")
                                li: a(href="#!newproject") New Project
                                li: a(href="#!") New Project
                                li: a(href="#!") New Project
                                li: a(href="#!") New Project
                        li: a(href="#!") View
                .grid.ide-content
                    .row.no-gap.h-100
                        .cell-md-3.directory-structure This is sidebar
                        .cell-md-9.code-editor
                            #editor function foo(items) { var x = "All this is syntax highlighted"; return x; }
                div.thin-menu.fg-white.bottom-menu(data-role="appbar" data-expand-point="md")
                    .app-bar-menu
                        li: a(href="#!") Home
                        li: a(href="#!") File
                        li: a(href="#!") View
                div.thin-menu.fg-white(data-role="appbar" data-expand-point="md")
                    .app-bar-menu
                        li: a(href="#!") Home
                        li: a(href="#!") File
                        li: a(href="#!") View
                script.
                    var customButtons = [
                        {
                            html: "<span class='mif-cross'></span>",
                            cls: "btn-close fg-white",
                            onclick: "$('.window').addClass('d-none')"
                        }
                    ];
                .p-2(data-role="window" data-place="center"
                    data-width="500" data-height="300" data-btn-min="no"
                    data-btn-max="no" data-shadow="true" data-btn-close="no" data-custom-buttons="customButtons")
                    .ng-view
        each $script in $scripts
            != $script