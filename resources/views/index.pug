- use ACIDECore\App\View
- $scripts = View::getScripts(['app' , 'ace'])
- $styles = View::getStyles(['app' , 'fontawesome' , 'metro4'])

doctype html
html(lang="fa")
    head
        meta(charset="UTF-8")
        meta(name="description" content="Free Web tutorials")
        meta(name="keywords" content="HTML,CSS,XML,JavaScript")
        meta(name="author" content="My name")
        meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
        title ACIDE
        each $style in $styles
            != $style
    body(ng-app="ideApp" ng-controller="ideCtrl")
        main
            .container-fluid.p-0
                div.thin-menu.fg-white.top-menu(data-role="appbar" data-expand-point="md")
                    .app-bar-menu
                        li: a(href="#!") Home
                        li: a(href="#!") File
                        li: a(href="#!") View
                .grid.ide-content
                    .row.no-gap.h-100
                        .cell-md-3.directory-structure This is sidebar
                        .cell-md-9.code-editor
                            #editor function foo(items) { var x = "All this is syntax highlighted"; return x; }
                div.thin-menu.fg-white.bottom-menu(data-role="appbar" data-expand-point="md")
                    .app-bar-menu
                        li: a(href="#!") Home
                        li: a(href="#!") File
                        li: a(href="#!") View
                div.thin-menu.fg-white(data-role="appbar" data-expand-point="md")
                    .app-bar-menu
                        li: a(href="#!") Home
                        li: a(href="#!") File
                        li: a(href="#!") View
        each $script in $scripts
            != $script