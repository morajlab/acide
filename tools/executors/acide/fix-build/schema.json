{
  "$schema": "http://json-schema.org/schema",
  "type": "object",
  "cli": "nx",
  "properties": {
    "outputPath": {
      "type": "string",
      "description": "build output path"
    },
    "fileReplacements": {
      "type": "array",
      "description": "replace files",
      "items": {
        "$ref": "#/definitions/fileReplacements"
      }
    }
  },
  "definitions": {
    "fileReplacements": {
      "type": "object",
      "required": [
        "src",
        "dest"
      ],
      "properties": {
        "src": {
          "type": "string",
          "description": "source file"
        },
        "dest": {
          "type": "string",
          "description": "destination file"
        }
      }
    }
  }
}
