{
  "$schema": "http://json-schema.org/schema",
  "type": "object",
  "cli": "nx",
  "properties": {
    "outputPath": {
      "type": "string",
      "description": "Build output path"
    },
    "fileReplacements": {
      "type": "array",
      "description": "Replace files",
      "items": {
        "$ref": "#/definitions/fileReplacements"
      }
    },
    "clearDirectory": {
      "type": "array",
      "description": "Clear a directory by .gitignore pattern",
      "items": {
        "$ref": "#/definitions/clearDirectory"
      }
    }
  },
  "definitions": {
    "fileReplacements": {
      "type": "object",
      "required": [
        "src",
        "dest"
      ],
      "properties": {
        "src": {
          "type": "string",
          "description": "Source file"
        },
        "dest": {
          "type": "string",
          "description": "Destination file"
        }
      }
    },
    "clearDirectory": {
      "type": "object",
      "required": [
        "path",
        "gitignore"
      ],
      "properties": {
        "path": {
          "type": "string",
          "description": "Destination directory path"
        },
        "gitignore": {
          "type": "string",
          "description": ".gitignore file path"
        }
      }
    }
  }
}
